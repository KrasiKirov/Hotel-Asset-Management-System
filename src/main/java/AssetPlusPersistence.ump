class AssetPlus {
    public void reinitialize() {
        User.reinitializeUniqueEmail(getUsers());
    }
}

class User { // separate manager, guests, employees?
    public static void reinitializeUniqueEmail(List<User> users) {
        usersByEmail.clear();
        for (var u : users) {
            usersByEmail.put(u.getEmail(), u)
        }
    }
}